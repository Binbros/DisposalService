{
    "compilerOptions": {
        "target": "es5",
        // "watch": true,
        "rootDir": "./src",  
        "outDir": "build",
        "moduleResolution": "node", 
        "esModuleInterop": true,  
        "resolveJsonModule": true,                /* Include modules imported with '.json' extension */
        "forceConsistentCasingInFileNames": true   
    },
    "include": ["**/*"],
    "exclude": ["**/*.spec.ts"]
}